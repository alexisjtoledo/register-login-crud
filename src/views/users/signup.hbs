<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Account register</h3>
            </div>
            <div class="card-body">
                <form action="/users/signup" method="post">
                    <div class="form-group">
                        <input type="text" name="name" class="form-control" placeholder="Your name" value="{{name}}"/>
                    </div>
                    <div class="form-group">
                        <input type="email" name="email" class="form-control" placeholder="Your e-mail" value="{{email}}"/>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control" placeholder="Choose a password" value="{{password}}"/>
                    </div>
                    <div class="form-group">
                        <input type="password" name="confirmpassword" class="form-control" placeholder="Confirm your password" value="{{confirmpassword}}"/>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            Sign up
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>